@model Restaurant

@{
    ViewData["Title"] = "Delete Restaurant";
}

<h2>Delete Restaurant</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this restaurant?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            
            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            
            <dt class="col-sm-3">Cuisine:</dt>
            <dd class="col-sm-9">@Model.Cuisine</dd>
            
            <dt class="col-sm-3">Rating:</dt>
            <dd class="col-sm-9">
                @for (int i = 1; i <= 5; i++)
                {
                    @if (i <= Model.Rating)
                    {
                        <span class="text-warning">★</span>
                    }
                    else
                    {
                        <span class="text-muted">☆</span>
                    }
                }
                (@Model.Rating/5)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="confirmed" value="true" />
    <input type="submit" value="Delete Restaurant" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
